# Build the docker image with `npx nx docker-build tavern-api`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t tavern-api`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system tavern-api && \
          adduser --system -G tavern-api tavern-api

COPY dist/apps/tavern-api tavern-api
RUN chown -R tavern-api:tavern-api .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix tavern-api --omit=dev -f install

CMD [ "node", "tavern-api" ]
